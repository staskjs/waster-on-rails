          <li role="presentation" active-menu="about"><a href="/about">{{ 'menu.about' | translate }}</a></li>
        </ul>

        <div class="row">
          <div class="col-lg-12" ng-view></div>
        </div>
      </div>
    </div>
  </div>

  </body>
